         function save(){
            alert(selectedValue);
         }

         $(function () {
           $('#amount').val(selectedValue);
           var slider = $("#slider").slider({
           orientation: "horizontal",
           min: 0,
           max: 100,
           value: 50,
           slide: function (event, ui) {
           $('#amount').val(ui.value);
           selectedValue = ui.value
           }
         });

